<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status 확인"
            android:textSize="24sp"
            android:paddingBottom="16dp" />

        <!-- 센서 데이터가 표시될 텍스트뷰 -->
        <TextView
            android:id="@+id/textViewSensorData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아직 센서 데이터가 수신되지 않았습니다."
            android:textSize="18sp"
            android:paddingBottom="8dp" />

        <!-- 센서 LED 모형들 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="16dp">

            <ImageView
                android:id="@+id/imageViewLedHRa"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/led_off" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HRa (초음파 A)"
                android:textSize="12sp"
                android:padding="4dp" />

            <ImageView
                android:id="@+id/imageViewLedHRb"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/led_off" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HRb (초음파 B)"
                android:textSize="12sp"
                android:padding="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="16dp">

            <ImageView
                android:id="@+id/imageViewLedSWa"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/led_off" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SWa (진동 A)"
                android:textSize="12sp"
                android:padding="4dp" />

            <ImageView
                android:id="@+id/imageViewLedSWb"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/led_off" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SWb (진동 B)"
                android:textSize="12sp"
                android:padding="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="16dp">

            <ImageView
                android:id="@+id/imageViewLedSWc"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/led_off" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SWc (진동 C)"
                android:textSize="12sp"
                android:padding="4dp" />

            <ImageView
                android:id="@+id/imageViewLedSWd"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/led_off" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SWd (진동 D)"
                android:textSize="12sp"
                android:padding="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="16dp">

            <ImageView
                android:id="@+id/imageViewLedSWe"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/led_off" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SWe (진동 E)"
                android:textSize="12sp"
                android:padding="4dp" />

            <ImageView
                android:id="@+id/imageViewLedSWf"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/led_off" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SWf (조도센서)"
                android:textSize="12sp"
                android:padding="4dp" />
        </LinearLayout>

        <!-- 추가된 LED 모형에 대한 새로운 LED 상태 표시 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="16dp">

            <ImageView
                android:id="@+id/imageViewNewLed"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/led_off" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LED 상태"
                android:textSize="12sp"
                android:padding="4dp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
